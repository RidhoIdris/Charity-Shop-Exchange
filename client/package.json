{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@shopify/polaris": "^4.20.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@vaadin/vaadin-button": "^2.2.2",
    "@vaadin/vaadin-combo-box": "^5.0.11",
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "netlify-cli": "^2.40.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-lottie": "^1.2.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "react-use-web-share": "^1.0.2",
    "vendor-copy": "^2.0.0"
  },
  "scripts": {
    "build:style": "tailwind build src/assets/styles/main.css -o src/assets/styles/tailwind.css",
    "start": "npm run build:style && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "vendor-copy",
    "code-formatter": "prettier src/**/*.js --write",
    "code-formatter-check": "prettier --check src/**/*.js",
    "lint": "eslint src/**/*.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "postcss-cli": "^7.1.0",
    "prettier": "^2.0.5",
    "tailwindcss": "^1.2.0"
  },
  "vendorCopy": [
    {
      "from": "node_modules/@webcomponents/webcomponentsjs/custom-elements-es5-adapter.js",
      "to": "public/vendor/custom-elements-es5-adapter.js"
    },
    {
      "from": "node_modules/@webcomponents/webcomponentsjs/webcomponents-bundle.js",
      "to": "public/vendor/webcomponents-bundle.js"
    }
  ]
}
